@model galleryWebsiteSparta.Models.UserLogin

@{
	ViewBag.Title = "Login";
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div id="LoginForm" style="padding-bottom: 11em; padding-top: 5.5em;">
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div style="padding-top: 1em; padding-bottom: 1em; width: 25em; text-align:center; margin: auto; ">
			<div style="height: 150px;  text-align:center;  padding:20px; margin-top: 10%; border: solid 1px; border-color: black; background-color:#E8563F; ">
				<h3 style="text-align:center;margin: 0;font-weight:bold;">Login</h3>
			</div>

			<div style="height: 300px; text-align: center; align-content: center; padding:20px; border: solid 1px; border-color: black; background-color: white;">
				<div class="form-group">
					@*@Html.LabelFor(model => model.UserEmail, htmlAttributes: new { @class = "control-label col-md-2" })*@
					<div class="col-md-12" style="padding:0; ">
						@Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.UserEmail) } })
						@Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					@*@Html.LabelFor(model => model.UserPassword, htmlAttributes: new { @class = "control-label col-md-2" })*@
					<div class="col-md-12" style="padding:0; ">
						@Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.UserPassword) } })
						@Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-12" style="padding:0">
						<input type="submit" value="Login" class="btn" />
					</div>
				</div>

				<div class="col-md-12" style="padding:0">
					<p style="text-align:center; font-size:0.9em;">Not a member? <a href="~/Home/SignUp/">Sign up</a></p>
				</div>
			</div>
		</div>
	}
</div>

@section Scripts{
	<script src="~/Scripts/jquery-3.4.1.min.js"></script>
	<script src="~/Scripts/jquery.validate.min.js"></script>
	<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}


